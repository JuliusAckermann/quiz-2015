<div>
  <label for="preg" class="rem">Pregunta:</label>
  <input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"
    placeholder="Escriba aquí su pregunta"/>
</div>
<div>
  <label for="resp" class="rem">Respuesta:</label>
  <input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"
    placeholder="Escriba aquí su respuesta"/>
</div>
<div>
  <label for="tem" class="rem">Tema:</label>
  <select name="quiz[tema]">
    <option value="otro"
      <% if (quiz.tema === "otro") { %> selected <% } %> >Otro</option>
    <option value="ciencia"
      <% if (quiz.tema === "ciencia") { %> selected <% } %> >Ciencia</option>
    <option value="humanidades"
      <% if (quiz.tema === "humanidades") { %> selected <% } %> >Humanidades</option>
    <option value="ocio"
      <% if (quiz.tema === "ocio") { %> selected <% } %> >Ocio</option>
    <option value="tecnologia"
      <% if (quiz.tema === "tecnologia") { %> selected <% } %> >Tecnología</option>
  </select>
</div>
<a href="/quizzes"><button type="button">Cancelar</button></a>
<input type="submit" value="Guardar">
