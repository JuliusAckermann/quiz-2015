<form method="get" action="/quizzes">

  <input type="text" name="search" placeholder="Buscar preguntas">
  <input type="submit" value="Buscar">
</form>
<table>
  <% var i; for (i=0; i < quizzes.length; i++) { %>
    <tr>
      <td><a href="quizzes/<%= quizzes[i].id %>"><%= quizzes[i].pregunta %></a></td>
      <td><a href="quizzes/<%= quizzes[i].id %>/edit"><button>Editar</button></a></td>
      <td>
        <form method="post" action="quizzes/<%= quizzes[i].id %>?_method=delete">
          <button type="submit"
            onclick="return confirm('Â¿Seguro que desea borrar la pregunta \'<%= quizzes[i].pregunta %>\'?');">
            Borrar
          </button>
        </form>
      </td>
    </tr>
  <% } %>
</table>
<a href="/quizzes/new"><button type="button">Crear pregunta</button></a>
